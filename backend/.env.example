# ========================================
# STOCK TRADING APP - ENVIRONMENT CONFIGURATION
# ========================================

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_password
DATABASE_NAME=stock_trading_db

# Application Configuration
NODE_ENV=development
PORT=8000

# External API Keys
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key
NEWS_API_KEY=your_news_api_key

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Stock Service Logging
# Controls the verbosity of stock price updates and operations
STOCK_VERBOSE_LOGGING=false
STOCK_PRICE_LOGGING=false

# WebSocket Logging  
# Controls WebSocket connection and operation logging
WEBSOCKET_CONNECTION_LOGGING=false
WEBSOCKET_VERBOSE_LOGGING=false

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# For debugging stock operations, set to true:
# STOCK_VERBOSE_LOGGING=true

# For debugging price update issues, set to true:
# STOCK_PRICE_LOGGING=true

# For debugging WebSocket connections, set to true:
# WEBSOCKET_CONNECTION_LOGGING=true
# WEBSOCKET_VERBOSE_LOGGING=true

# ========================================
# PRODUCTION SETTINGS
# ========================================

# For production, keep all logging values as false
# to minimize console output and improve performance
