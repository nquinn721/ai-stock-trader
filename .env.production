# Production Environment Variables
NODE_ENV=production

# Database
PROD_DATABASE_URL=postgresql://username:password@database-prod:5432/trading_app_prod
PROD_DB_USER=trading_app_user
PROD_DB_PASSWORD=secure_production_password

# External APIs (same as dev but with higher rate limits)
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
NEWS_API_KEY=your_news_api_key

# Redis
REDIS_URL=redis://redis-prod:6379

# Security
JWT_SECRET=your_super_secure_jwt_secret_for_production
ENCRYPTION_KEY=your_encryption_key_for_production

# CORS
CORS_ORIGIN=http://localhost:3080,https://yourdomain.com

# Logging
LOG_LEVEL=warn
LOG_FILE=/app/logs/production.log

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
