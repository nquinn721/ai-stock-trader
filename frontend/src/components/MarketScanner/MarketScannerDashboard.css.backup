/* Modern Market Scanner Dashboard Styles */
.market-scanner-dashboard {
  background: linear-gradient(
    145deg,
    #0d1117 0%,
    #161b22 25%,
    #21262d 50%,
    #30363d 75%,
    #1c2128 100%
  );
  background-attachment: fixed;
  min-height: 100vh;
  padding: 24px;
  position: relative;
  font-family:
    -apple-system, BlinkMacSystemFont, "Inter", "Segoe UI", sans-serif;
}

.market-scanner-dashboard::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:
    radial-gradient(
      circle at 25% 25%,
      rgba(34, 197, 94, 0.08) 0%,
      transparent 60%
    ),
    radial-gradient(
      circle at 75% 75%,
      rgba(59, 130, 246, 0.06) 0%,
      transparent 60%
    ),
    radial-gradient(
      circle at 50% 50%,
      rgba(168, 85, 247, 0.04) 0%,
      transparent 70%
    );
  pointer-events: none;
  z-index: -1;
}

@keyframes subtleFloat {
  0%,
  100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-3px);
  }
}

/* Header Section */
.scanner-header {
  background: rgba(33, 38, 45, 0.95) !important;
  backdrop-filter: blur(20px) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 16px !important;
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.2),
    0 1px 0 rgba(255, 255, 255, 0.05) inset !important;
  margin-bottom: 32px !important;
  padding: 32px !important;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scanner-title {
  background: linear-gradient(135deg, #22c55e 0%, #3b82f6 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 700 !important;
  font-size: 2.2rem !important;
  margin-bottom: 0 !important;
  letter-spacing: -0.025em;
}

.scanner-icon {
  color: #22c55e !important;
  font-size: 2.2rem !important;
  margin-right: 16px !important;
  filter: drop-shadow(0 2px 4px rgba(34, 197, 94, 0.3));
}

.scanning-chip {
  background: rgba(34, 197, 94, 0.15) !important;
  color: #22c55e !important;
  backdrop-filter: blur(10px) !important;
  border: 1px solid rgba(34, 197, 94, 0.3) !important;
  border-radius: 20px !important;
  font-weight: 500 !important;
}

/* Action Buttons */
.scan-button {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%) !important;
  border: none !important;
  border-radius: 12px !important;
  padding: 12px 24px !important;
  color: white !important;
  font-weight: 600 !important;
  box-shadow:
    0 4px 16px rgba(34, 197, 94, 0.25),
    0 1px 0 rgba(255, 255, 255, 0.1) inset !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  min-width: 140px !important;
  text-transform: none !important;
  font-size: 0.95rem !important;
}

.scan-button:hover {
  transform: translateY(-1px) !important;
  box-shadow:
    0 6px 20px rgba(34, 197, 94, 0.35),
    0 1px 0 rgba(255, 255, 255, 0.1) inset !important;
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%) !important;
}

.export-button {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%) !important;
  border: none !important;
  border-radius: 12px !important;
  padding: 12px 24px !important;
  color: white !important;
  font-weight: 600 !important;
  box-shadow:
    0 4px 16px rgba(59, 130, 246, 0.25),
    0 1px 0 rgba(255, 255, 255, 0.1) inset !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  text-transform: none !important;
  font-size: 0.95rem !important;
}

.export-button:hover {
  transform: translateY(-1px) !important;
  box-shadow:
    0 6px 20px rgba(59, 130, 246, 0.35),
    0 1px 0 rgba(255, 255, 255, 0.1) inset !important;
  background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%) !important;
}

.refresh-button {
  background: rgba(56, 62, 70, 0.8) !important;
  backdrop-filter: blur(10px) !important;
  border: 1px solid rgba(75, 85, 99, 0.5) !important;
  border-radius: 12px !important;
  color: #e5e7eb !important;
  transition: all 0.3s ease !important;
  width: 48px !important;
  height: 48px !important;
}

.refresh-button:hover {
  background: rgba(75, 85, 99, 0.8) !important;
  border-color: rgba(156, 163, 175, 0.5) !important;
  transform: rotate(90deg) !important;
  color: #f9fafb !important;
}

/* Status Cards Grid */
.status-cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
}

.status-card {
  background: rgba(33, 38, 45, 0.95) !important;
  backdrop-filter: blur(20px) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 16px !important;
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.15),
    0 1px 0 rgba(255, 255, 255, 0.05) inset !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  overflow: hidden !important;
  position: relative !important;
  animation: subtleFloat 6s ease-in-out infinite;
}

.status-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(
    90deg,
    #22c55e 0%,
    #3b82f6 25%,
    #8b5cf6 50%,
    #f59e0b 75%,
    #ef4444 100%
  );
  border-radius: 16px 16px 0 0;
}

.status-card:nth-child(2) {
  animation-delay: 1s;
}

.status-card:nth-child(3) {
  animation-delay: 2s;
}

.status-card:nth-child(4) {
  animation-delay: 3s;
}

.status-card:hover {
  transform: translateY(-4px) !important;
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.25),
    0 1px 0 rgba(255, 255, 255, 0.08) inset !important;
  border-color: rgba(75, 85, 99, 0.8) !important;
}

.status-card .MuiCardContent-root {
  padding: 24px !important;
}

.status-label {
  color: #9ca3af !important;
  font-size: 0.875rem !important;
  font-weight: 600 !important;
  text-transform: uppercase !important;
  letter-spacing: 0.05em !important;
  margin-bottom: 12px !important;
}

.status-value {
  color: #f9fafb !important;
  font-size: 2rem !important;
  font-weight: 700 !important;
  line-height: 1 !important;
  margin-bottom: 8px !important;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.status-description {
  color: #6b7280 !important;
  font-size: 0.875rem !important;
  font-weight: 500 !important;
  line-height: 1.4 !important;
}

/* Main Content Card */
.main-content-card {
  background: rgba(33, 38, 45, 0.95) !important;
  backdrop-filter: blur(20px) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 16px !important;
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.15),
    0 1px 0 rgba(255, 255, 255, 0.05) inset !important;
  overflow: hidden !important;
}

/* Enhanced Tabs */
.scanner-tabs {
  background: rgba(17, 24, 28, 0.8) !important;
  border-radius: 16px 16px 0 0 !important;
  padding: 8px 8px 0 8px !important;
  margin: 0 !important;
  border: none !important;
  border-bottom: 1px solid rgba(56, 62, 70, 0.6) !important;
}

.scanner-tab {
  color: #9ca3af !important;
  font-weight: 600 !important;
  border-radius: 12px !important;
  margin: 0 4px !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  text-transform: none !important;
  font-size: 0.95rem !important;
  padding: 12px 20px !important;
  min-height: auto !important;
}

.scanner-tab.Mui-selected {
  background: rgba(59, 130, 246, 0.15) !important;
  color: #3b82f6 !important;
  box-shadow:
    0 2px 8px rgba(59, 130, 246, 0.2),
    0 1px 0 rgba(255, 255, 255, 0.05) inset !important;
  border: 1px solid rgba(59, 130, 246, 0.3) !important;
}

.scanner-tab:hover:not(.Mui-selected) {
  background: rgba(75, 85, 99, 0.3) !important;
  color: #e5e7eb !important;
  transform: translateY(-1px) !important;
}

/* Tab Content */
.tab-content {
  padding: 32px !important;
  background: transparent !important;
  min-height: 400px;
}

/* Error Alert */
.error-alert {
  background: rgba(239, 68, 68, 0.15) !important;
  border: 1px solid rgba(239, 68, 68, 0.3) !important;
  border-radius: 12px !important;
  backdrop-filter: blur(20px) !important;
  color: #fca5a5 !important;
  margin-bottom: 24px !important;
}

/* Loading States */
.loading-container {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 64px !important;
  background: rgba(17, 24, 28, 0.6) !important;
  border-radius: 16px !important;
  backdrop-filter: blur(20px) !important;
}

.loading-spinner {
  color: #3b82f6 !important;
  margin-bottom: 16px !important;
}

.loading-text {
  color: #e5e7eb !important;
  font-size: 1.1rem !important;
  font-weight: 600 !important;
}

/* Responsive Design */
@media (max-width: 768px) {
  .market-scanner-dashboard {
    padding: 16px;
  }

  .scanner-header {
    padding: 24px !important;
    flex-direction: column;
    gap: 20px;
    text-align: center;
  }

  .scanner-title {
    font-size: 1.8rem !important;
  }

  .status-cards-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .status-card .MuiCardContent-root {
    padding: 20px !important;
  }

  .tab-content {
    padding: 20px !important;
  }

  .header-actions {
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInFromTop {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scanner-header {
  animation: slideInFromTop 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.status-card,
.main-content-card {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  opacity: 0;
}

.status-card:nth-child(1) {
  animation-delay: 0.1s;
}
.status-card:nth-child(2) {
  animation-delay: 0.2s;
}
.status-card:nth-child(3) {
  animation-delay: 0.3s;
}
.status-card:nth-child(4) {
  animation-delay: 0.4s;
}

.main-content-card {
  animation-delay: 0.5s;
}

/* Button Group */
.header-actions {
  display: flex;
  gap: 12px;
  align-items: center;
}

/* Scanner Status Indicator */
.scanner-status {
  display: flex;
  align-items: center;
  gap: 16px;
}

/* Typography Enhancements */
.MuiTypography-root {
  color: #f9fafb !important;
}

.MuiTabs-indicator {
  display: none !important;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: rgba(17, 24, 28, 0.5);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: rgba(75, 85, 99, 0.8);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(107, 114, 128, 0.9);
}

/* Child Component Enhancements */

/* Screener Builder Styles */
.screener-builder {
  background: rgba(17, 24, 28, 0.6);
  border-radius: 12px;
  padding: 24px;
  margin: 16px 0;
  border: 1px solid rgba(56, 62, 70, 0.6);
}

.screener-criteria-card {
  background: rgba(33, 38, 45, 0.8) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 12px !important;
  margin-bottom: 16px !important;
}

/* Preset Templates Styles */
.preset-templates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
  padding: 20px 0;
}

.template-card {
  background: rgba(33, 38, 45, 0.8) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 12px !important;
  transition: all 0.3s ease !important;
  cursor: pointer !important;
}

.template-card:hover {
  background: rgba(45, 51, 59, 0.9) !important;
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2) !important;
  border-color: rgba(75, 85, 99, 0.8) !important;
}

.template-card.selected {
  background: rgba(59, 130, 246, 0.15) !important;
  border-color: rgba(59, 130, 246, 0.5) !important;
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.2) !important;
}

/* Scan Results Styles */
.scan-results-container {
  background: rgba(17, 24, 28, 0.6);
  border-radius: 12px;
  padding: 24px;
  min-height: 300px;
  border: 1px solid rgba(56, 62, 70, 0.6);
}

.results-header {
  color: #f9fafb !important;
  font-weight: 600 !important;
  margin-bottom: 20px !important;
}

.results-empty {
  text-align: center;
  padding: 60px 20px;
  color: #9ca3af !important;
}

.results-loading {
  text-align: center;
  padding: 60px 20px;
  color: #e5e7eb !important;
}

/* Alert Manager Styles */
.alert-manager {
  background: rgba(17, 24, 28, 0.6);
  border-radius: 12px;
  padding: 24px;
  border: 1px solid rgba(56, 62, 70, 0.6);
}

.alert-card {
  background: rgba(33, 38, 45, 0.8) !important;
  border: 1px solid rgba(56, 62, 70, 0.8) !important;
  border-radius: 12px !important;
  margin-bottom: 16px !important;
}

/* Form Controls Enhancement */
.MuiFormControl-root {
  background: rgba(33, 38, 45, 0.8) !important;
  border-radius: 12px !important;
}

.MuiOutlinedInput-root {
  background: rgba(17, 24, 28, 0.6) !important;
  border-radius: 12px !important;
  color: #f9fafb !important;
}

.MuiOutlinedInput-notchedOutline {
  border-color: rgba(56, 62, 70, 0.8) !important;
}

.MuiOutlinedInput-root:hover .MuiOutlinedInput-notchedOutline {
  border-color: rgba(75, 85, 99, 0.8) !important;
}

.MuiOutlinedInput-root.Mui-focused .MuiOutlinedInput-notchedOutline {
  border-color: rgba(59, 130, 246, 0.8) !important;
}

.MuiInputLabel-root {
  color: #9ca3af !important;
}

.MuiInputLabel-root.Mui-focused {
  color: #3b82f6 !important;
}

.MuiSelect-icon {
  color: #9ca3af !important;
}

.MuiMenuItem-root {
  background: rgba(33, 38, 45, 0.95) !important;
  color: #f9fafb !important;
  border-bottom: 1px solid rgba(56, 62, 70, 0.5) !important;
}

.MuiMenuItem-root:hover {
  background: rgba(59, 130, 246, 0.15) !important;
}
.MuiMenuItem-root:hover {
  background: rgba(102, 126, 234, 0.3) !important;
}

/* Typography Overrides for Child Components */
.tab-content .MuiTypography-h6 {
  color: #f9fafb !important;
  font-weight: 600 !important;
  margin-bottom: 16px !important;
}

.tab-content .MuiTypography-body1,
.tab-content .MuiTypography-body2 {
  color: #e5e7eb !important;
  line-height: 1.6 !important;
}

/* Button Enhancements for Child Components */
.tab-content .MuiButton-root {
  background: rgba(56, 62, 70, 0.8) !important;
  border: 1px solid rgba(75, 85, 99, 0.6) !important;
  border-radius: 12px !important;
  color: #e5e7eb !important;
  transition: all 0.3s ease !important;
  text-transform: none !important;
  font-weight: 500 !important;
}

.tab-content .MuiButton-contained {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%) !important;
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.25) !important;
  color: white !important;
  border: none !important;
}

.tab-content .MuiButton-root:hover {
  background: rgba(75, 85, 99, 0.8) !important;
  transform: translateY(-1px) !important;
  border-color: rgba(156, 163, 175, 0.6) !important;
}

.tab-content .MuiButton-contained:hover {
  background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%) !important;
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.35) !important;
}

/* Chip Enhancements */
.tab-content .MuiChip-root {
  background: rgba(56, 62, 70, 0.8) !important;
  color: #e5e7eb !important;
  border: 1px solid rgba(75, 85, 99, 0.6) !important;
  border-radius: 8px !important;
}

.tab-content .MuiChip-colorPrimary {
  background: rgba(59, 130, 246, 0.2) !important;
  border-color: rgba(59, 130, 246, 0.4) !important;
  color: #93c5fd !important;
}

/* Table Enhancements */
.tab-content .MuiTable-root {
  background: rgba(17, 24, 28, 0.6) !important;
  border-radius: 12px !important;
  overflow: hidden !important;
  border: 1px solid rgba(56, 62, 70, 0.6) !important;
}

.tab-content .MuiTableHead-root {
  background: rgba(33, 38, 45, 0.8) !important;
}

.tab-content .MuiTableCell-root {
  color: #f9fafb !important;
  border-color: rgba(56, 62, 70, 0.6) !important;
  font-weight: 500 !important;
}

.tab-content .MuiTableCell-head {
  color: #9ca3af !important;
  font-weight: 600 !important;
  text-transform: uppercase !important;
  font-size: 0.875rem !important;
  letter-spacing: 0.05em !important;
}

.tab-content .MuiTableRow-root:hover {
  background: rgba(33, 38, 45, 0.6) !important;
}
